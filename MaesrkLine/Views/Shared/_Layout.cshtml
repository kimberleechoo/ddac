<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Maersk</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <img src="~/Content/Images/cargo.png" alt="Site Logo" style="height:500px; width: 1500px" />
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Maersk Line", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                   
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @if (User.IsInRole("Agent"))

    {
               
                <li>@Html.ActionLink("View Vessel", "ViewVessels", "Vessels")</li>
                <li>@Html.ActionLink("Create Booking", "Index", "Bookings")</li>
}
                 @if(User.IsInRole("Admin"))
    {


                <li>@Html.ActionLink("Create Vessel", "Index", "Vessels")</li>
                <li>@Html.ActionLink("View Booking", "ViewBookings", "Bookings")</li>
                <li>@Html.ActionLink("Register Agent", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

}

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Maersk Line</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
